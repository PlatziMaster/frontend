.display 
    width: 200px
    height: auto
    align-self: center
    @media screen and (max-width: 650px)
        width: 150px
    
    &--image 
        width: 160px
        height: 160px
        background-repeat: no-repeat
        background-position: center
        background-size: cover
        border-radius: 100px
        border: 2px solid soft-white
        margin: 20px 10px
        box-shadow: inset 0 0 4px gray-black,
            0 0 15px black


    &--title 
        color: soft-white
        font-weight: 400
        font-size: ProfileFontSize
        text-align: center
        margin-block-end: 15px

    &--lastname 
        color: light-blue
        font-weight: 700
        letter-spacing: 1px

    &--subtitle
        color: soft-white
        text-align: center
        font-size: TitleFontSize
        font-weight: 300
        border-top: 1px solid soft-white
        border-bottom: 1px solid soft-white
        padding: 5px 0
        margin-block-end: 30px
    @media screen and (max-width: 820px)
        &--image
            width: 200px
            height: 200px
            margin 20px 0
        &--title
            font-size 4rem
    @media screen and (max-width: 650px)
        &--image
            width: 150px
            height: 150px
            margin 20px 0
        &--title
            font-size 2rem