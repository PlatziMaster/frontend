.social 
    width: 80%
    align-self: center
    margin-block-start: 40px
    @media screen and (max-width: 820px)
        margin-block-start 0
        width 100%
        text-align center
        display none

    &--title 
        color: soft-white
        font-size: TitleFontSize
        font-weight: 400
        border-top: 1px solid soft-white
        border-bottom: 1px solid soft-white
        margin: 30px 0 10px 0


.social-cards--container 
    width auto
    align-self center
    font-size BaseFontSize
    @media screen and (max-width: 820px)
        display none

.social-detail--card 
    display flex
    color soft-white
    padding 10px 10px
    @media screen and (max-width: 650px)
        padding 5px 5px


.social--card_data 
    margin-left 10px
    align-self center
    
.social--card_data a
    text-decoration none
    color soft-white
    font-size BaseFontSize


.data--title 
    font-weight: bold;
    padding-block-end: 5px


.pin-icon
    display: block
    font-size: IconsFontSize
    padding-inline-end: 10px
    @media screen and (max-width: 650px)
        font-size TitleFontSize

