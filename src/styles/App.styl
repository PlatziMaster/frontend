@import './Vars.styl'
@import './Mixins.styl'
/* @import './Media.styl' */

@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');
@import url('https://fonts.googleapis.com/css?family=Anton');

* {
  box-sizing border-box
  margin 0
}

html {
  font-size 62.5%
  overflow-x:hidden
}

body
  font-family 'Lato', 'Helvetica Neue', sans-serif;
  overflow-x:hidden
  background-color background-color
  max-width 130rem
  min-width 49rem
  margin auto

p
  font-size 2rem

a
  font-size 2rem
  text-decoration none
  color black

a:hover
  color primary-color

h1
  font-size 3rem

h2
  font-size 3rem

h3
  font-size 2.5rem

@media (min-width: 1000px)
  .Container
    display: flex
    flex-direction: row