*
  margin 0
  padding 0

html
  font-size 62.5%

body
  background-color white
  font-size 1.4rem
  font-family 'Courier New', Courier, monospace

.main
  width 90%
  margin 50px auto
  box-shadow 0px 0px 20px 10px #00000044
  display flex
  flex-direction row

a
  text-decoration none
  color #16FFE2aa

a:hover
  color #16FFE2

.container
  display flex
  flex-direction row
  justify-content space-between

@media (max-width: 1023px)
  .main
    margin 25px auto
    flex-direction column

  .container
    display flex
    flex-direction column

@media (max-width: 450px)
  .main
    margin 0
    width 100%
    box-shadow none
