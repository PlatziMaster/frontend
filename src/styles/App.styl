@import './Vars.styl'
@import './Mixins.styl'
@import './Media.styl'

@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');
@import url('https://fonts.googleapis.com/css?family=Anton');

* {
  box-sizing border-box
  margin 0
}

html {
  font-size 62.5%
  overflow-x:hidden
}

body
  font-family 'Lato', 'Helvetica Neue', sans-serif;
  overflow-x:hidden
  background-color background-color

p
  font-size 1.5rem

a
  font-size 1.5rem
  text-decoration none
  color black

a:hover
  color primary-color

h1
  font-size 3rem

h2
  font-size 2.5rem

h3
  font-size 2rem