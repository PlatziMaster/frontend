@import './App.styl';

.About-container
    display flex
    flex-direction column
    gap 1rem
    padding 1rem
    grid-area About-container

    .Header-job-title
        text-align: left

    .About-title
        display flex
        flex-direction row
        flex-wrap wrap
        width 60%
        line-height 5rem
        justify-content left

        img
            width 1.5rem
            padding-right 2rem
            padding-left 2rem
            &:first-child
                padding-left 0
            &:nth-of-type(4)
                padding-left 0