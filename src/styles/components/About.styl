@import '../Generales.styl'

.About
  gap 20px
  align-items center
  justify-content space-between

.About-list
  gap 5px
  flex-wrap wrap
  list-style none

.About-item
  padding-right 10px
  & a
    color $black

.About-content
  gap 6px

.About-img
  width 100px
  height 100px
  border-radius $border-circle
  border: $border-width solid $border-color;
  & img
    max-width 100%
    max-height 100%
    border-radius $border-circle

@media screen and (min-width 375px)
  .About
    grid-template-columns auto 1fr
