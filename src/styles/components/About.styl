.About-container
  background-color lightness(#ff4500, 80%)
  border-radius 1rem
  margin 2rem 2rem 2rem 0
  padding 2rem
  color black
  align-content center
  .About-title
    font-size 2.5rem
    text-align center
  .About-job-title
    font-size 2rem
    text-align center
  .About-contact-container
    display grid
    grid-template-columns repeat(4, auto)
    grid-gap 1rem
    margin-top 1.8rem
    .About-item
      font-size 1.4rem