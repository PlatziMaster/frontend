.about-wrapper
  display: flex
  flex-wrap: wrap
  align-items: center
  gap: 36px
  margin-bottom: 56px

.avatar
  width: 140px
  height: 140px
  border-radius: 8px
  overflow: hidden

.avatar img
  width: 100%
  height: 100%
  object-fit: cover

.content
  width:100%
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-items: center

.name
  font-size: 36px
  font-weight: 400

.profession
  font-size: 22px
  font-weight: 400

.contact-info
  padding: 16px
  text-align: right


@media all and (max-width: 768px)

  .avatar
    width: 100px
    height: 100px

  .name
    font-size: 24px
    font-weight: 400

  .profession
    font-size: 18px
    font-weight: 400

  .contact-info
    text-align: left
    padding: 0
    margin-top: 16px