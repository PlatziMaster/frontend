
.Academic-item
  width 100%
  padding 10px 0
  ul
    columns 2
    -webkit-columns 2
    -moz-columns 2
    padding-top 10px
    font-size 1.3rem
.Academic-list
  margin-bottom 20px
.item-head
  width 100%
  display flex
  flex-wrap wrap
  justify-content space-between
  margin-bottom 5px
  span
    font-weight 600
    font-size 1.6rem

.degree
  font-size 1.5rem
  margin-bottom 4px
  font-weight 500

.courses
  font-weight 600
  font-size 1.9rem
  padding-top 10px

@media only screen and (max-width 410px)
  .Academic-item ul
    columns 1