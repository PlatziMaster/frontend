
.Academic-item
  width 100%
  padding 10px 0
  ul
    columns 1
    -webkit-columns 1
    -moz-columns 1
    padding-top 10px
    font-size 1.3rem
.Academic-list
  margin-bottom 20px
.item-head
  width 100%
  display inline-block
  flex-wrap wrap
  justify-content space-between
  margin-bottom 5px
  span
