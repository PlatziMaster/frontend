*
  margin 0
  padding 0

html
  font-size 62.5%

body
  background-color white
  font-size 1.4rem
  font-family: 'Lato', sans-serif;

.main
  width 90%
  margin 50px auto
  box-shadow 0px 0px 20px 10px #00000044
  display flex
  flex-direction column

a
  text-decoration none
  color #354257

a:hover
  color #647CA3

.container
  display flex
  flex-direction column
  justify-content space-between

#third__section
  display flex
  flex-direction row

#fourth__section
  display flex
  flex-direction row

@media (max-width: 1023px)
  .main
    margin 25px auto
    flex-direction column 

  .container
    display flex
    flex-direction column 

@media (max-width: 450px)

  #third__section
    flex-basis 100%
    flex-direction: column;
  
  #fourth__section
    flex-direction: column

  .main
    margin 0
    width 100%
    box-shadow none