body
  background-color white
  font-family:  Helvetica, sans-serif,
  color: white
  h1
    font-size: 2em
  h2 
    font-size: 1.8em


.Card-container
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.Header-title
  width: 98%
  
.About-title
  flex-grow: 1
  justify-content: center
  margin-top: 10em

.About-avatar
  flex-grow: 2
  display: flex
  align-items: center
  justify-content: center
  padding: 0 1em 0
  img
    height: 150px 
    
.About-info
  flex-grow: 3
  display: flex
  flex-direction: column
  .About-title
    font-weight: bold
    margin-top: .35em
    margin-bottom: .10em
  .contact
    display: flex
    flex-direction: row
    flex-wrap: wrap
    margin-top: .6em
    p
      margin-right: 1em
  p
    margin-top: 0    
    margin-bottom: .5em    

.About-card
  background-color: #e0f4ff 
  display: flex
  flex-direction: row
  justify-content: space-around
  padding-bottom: .5em
  margin-bottom: .7em

.Common-card
  background-color: #bdf1d4 
  display: flex
  flex-direction: column
  justify-content: flex-start
  padding-bottom: .5em  
  min-height: 110px
  width: 98%
  margin-bottom: .7em
  .full
    height: 98%

.Profile-title
.Experience-title
.Academic-title
.Skills-title
.Languages-title
.Interest-title
  margin: 0.7em 0.7em .25em
  
.Profile-desc
  margin: 0 1.2em 0

.Exp-wrapper
.Common-wrapper
  display: flex
  flex-wrap: wrap

.Experience-item
.Academic-item
.Skills-item
.Languages-item
.Interest-item
  width: 98%
  flex: 40%
  .strong
    font-weight: bold
    font-size: 1.1em
  p
    margin-inline-start: 1.2em
    margin-block-start: .3em
    margin-block-end: .3em

.Items-line
  width: 98%
  display: flex
  justify-content: space-between 
  flex-wrap: wrap 
  div
    width: 80%
    flex: 0 49%

  

