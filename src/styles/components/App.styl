$mintcolor = #c8f9e4
$headercolor = #e0f4ff
/*Common*/
html
  font-size: 62.5%
  font-family: Arial, Helvetica, sans-serif
  font-weight: lighter
.mintColor 
  background-color: $mintcolor
body
  background-color white
  padding: 1vw
  box-sizing: border-box
  margin: 0
  font-size: 1.6rem
a
  margin-left: .2rem

//The whole app container
#app
  width: 100%
  display: flex
  flex-direction: row
  flex-wrap: wrap

p
  margin: 5px 10px 5px 0px 
  font-size: 1.8rem
  color: #47525e
  font-weight: lighter
h1
  display: block
  margin-block-end: 0
  color: #47525e
h3
  display: block
  margin-block-end: 0
  color: #47525e
img
  border-radius: 100%
  height: 15rem
  width: 15rem
  margin: 1rem 3.5rem
  align-self: center
  object-fit: cover;
.commonText
  margin:2rem 2rem

/*Containers Layout*/
.headerColor
  background-color: $headercolor
.mintColor 
  background-color: $mintcolor
.fullWidth
  min-height: 15rem
  max-height: 45rem
  width: 100%
  margin: 5px 0
  @media (max-width: 1000px)
    flex-direction: column
.social
  width: 70%
  margin: 1px 0
  padding: 4px 2rem 
  display: flex
  flex-direction: row
  justify-content: space-between
  @media (max-width: 1000px)
    width: 100%
.halfWidth
  min-height: 15rem
  max-height: 20rem
  width: 49.8%
  margin: 5px 0
  @media (max-width: 1000px)
    width: 100%
.leftContainer
  margin: 1rem .2% 1rem 0rem
.rightContainer
  margin: 1rem 0rem 1rem 0.2%


//Social
.socialContainer
  width: 100%
  display: flex
  flex-direction: row
  justify-content: start

/*HeaderContainer*/
.HeaderClass
  max-height: 55rem!important
  padding-inline-start: 3vw
  display: flex
  align-items:flex-start
  flex-direction: row
  align-content: center
  @media (max-width: 510px)
    flex-direction: column

.infoHeader
  display: flex
  flex-direction: column
  flex: wrap



/*About Nested in Header*/
.About
  display: flex
  align-items:flex-start
  flex-wrap: wrap
  margin: 1rem 0
.About .address
  display: block
  width: 100%

/*Experience*/
.tablecolumn
  display: flex
  flex-direction: column
  flex-wrap: wrap
  max-height: 15rem
  @media (max-width: 1000px)
    flex-direction: row
    max-height: 45rem

.tableExp
  max-height: 45rem
.listeditems
  min-height: 2rem
  
/*Interest*/
.listeditemsInterest
  border-left: 3px solid rgb(180,10,110);
  margin-bottom: 2px 
  font-size: 1.8rem
/*Languages*/
.tablerow
  display: flex
  flex-direction: row
  flex-wrap: wrap
  max-height: 10rem
  margin-right: 5rem
  border-left: 3px solid rgb(180,10,110);
  margin-bottom: 2px 


/*Academic and Half sections*/
.listeditemsAcademic
  font-size: 1.2rem
  
.infoAcademic
  display: flex
  flex-direction: column
  
.infoSkills
  display: flex
  flex-direction: column
.flexingRow
  display: flex
  flex-direction: row
  border-left: 3px solid rgb(180,10,110);
  margin-bottom: 2px 
.flexingRow p
  display: inline
.flexColumn
  display: flex
  flex-wrap: wrap
  flex-direction: column
.flexColumn  p
  display: inline