*
  margin 0
body
  margin 0
  font-family 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
  color white
  background #2B2B2B
section
  // background #BDF
  border 4px solid #BDF
  border-radius 4px
  min-height 8rem
  text-align center
  padding 1rem
  h2
    border-bottom: 1px solid white
    margin-top 1rem
    margin-bottom 2rem
h2
  font-size 2.2rem
h3
  font-size 1.4rem
a
  text-decoration none
  color white
  display flex
  gap 0.5rem
  align-items center
  &:hover
    color #BDF

#app
  display grid
  grid-template-columns 1fr 1fr
  gap 1rem
  max-width: 60rem
  margin auto
  margin-bottom 4rem


.Header, .Profile, .Experience
  // background #666
  grid-column: span 2
  min-height 8rem
  padding 1rem 20%

.Header
  display: flex
  justify-content: space-evenly
  align-items center
  padding .5rem
  margin 1rem
  &-title
    display flex
    align-content: center
    > div
      margin-left 1rem
      display flex
      flex-direction column
      justify-content center
  img
    width: 130px
    border-radius 50%
      

.Experience, .Academic
  >div
    border-top: 1px solid white
    margin-top 1rem
    margin-bottom 2rem
    padding-top 2rem
    &:first-of-type
      border-top: none
      padding-top initial

.Profile
  padding-bottom 2.5rem



  