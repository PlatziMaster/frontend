body
  background-color #242424
  padding 1em 5em

#app
  display flex
  flex-wrap wrap
  justify-content space-between

.about
  display flex
  justify-content flex-start
  padding-left 2em
  gap 5em
  width 100%
  color #E5E5E5

.header
  width 100%

img
  width 200px
  border-radius 2em

h1
  text-decoration underline

h2
  text-decoration underline

h3::before
  content '--> '


li
  list-style none

.big
  background-color silver
  padding 2em
  flex-shrink 2
  margin 1em
  width 100%
  border-radius: 25px;

.small
  background-color silver
  padding 0em 2em 
  flex-shrink 2
  margin 1em
  width 100%
  border-radius: 25px;

.profile
  color #E5E5E5
  padding 0em 2em