@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,800;1,200;1,500;1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap');

*
  padding 0
  margin 0
  box-sizing border-box

html
  font-size 62.5%

body
  margin 2rem
  background-color #eae8ed
  font-family 'Poppins', sans-serif
  font-size 1.6rem

a
  text-decoration none
  color #888888
  transition .5s

  &:hover
    color #424242

#app
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between

.title
  font-family Signika, sans-serif

.container
  padding 3rem
  margin-bottom 2rem
  background-color #fff
  border-radius .4rem
  box-shadow 0px 0px 9px -4px #000000

  &--full
    width 100%

  &--semi
    width 49.5%

.list
  margin-top 3rem

.shadow-border
  box-shadow 0px 0px 9px -4px #000000