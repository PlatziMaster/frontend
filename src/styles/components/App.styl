body
  background-color #fff
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
  color: #47525e
  h2 
    font-size: 1.7em

.Card-container
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.About-title
   
.About-avatar
  flex-grow: 1
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 1em 0
  img
    height: 120px 
    border-radius: 50%

.About-info
  flex-grow: 3
  display: flex
  flex-direction: column
  .title
    font-weight: bold
    margin-top: .35em
    margin-bottom: .10em
  .contact
    display: flex
    flex-direction: row
    flex-wrap: wrap
    margin-top: .6em
    p
      margin-right: 1em
  p
    margin-top: 0    
    margin-bottom: .5em    

.About-card
  background-color: #e0f4ff 
  display: flex
  flex-direction: row
  justify-content: space-around
  border-radius: 15px
  padding-bottom: .5em
  margin-bottom: .7em

.Common-card
  background-color: #bdf1d4 
  display: flex
  flex-direction: column
  justify-content: flex-start
  border-radius: 15px
  padding-bottom: .5em  
  min-height: 110px
  width: 95%
  margin-bottom: .7em
  .full
    height: 100%

.Profile-title
.Experience-title
.Academic-title
.Skills-title
.Languages-title
.Interest-title
  margin: 0.7em 0.7em .25em
  
.Profile-desc
  margin: 0 1.2em 0

.Exp-wrapper
.Common-wrapper
  display: flex
  flex-wrap: wrap

.Experience-item
.Academic-item
.Skills-item
.Languages-item
.Interest-item
  width: 100%
  flex: 40%
  .strong
    font-weight: bold
    font-size: 1.1em
  p
    margin-inline-start: 1.2em
    margin-block-start: .3em
    margin-block-end: .3em

.Items-wrapper
  width: 95%
  display: flex
  flex-direction: row
  justify-content: space-between
  flex-wrap: wrap
  div
    width: 100%
    flex: 0 49%

  
.Header-title
  width: 95%
