.category-container{
    background: rgba( 66, 75, 84, 0.25 );
    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
    backdrop-filter: blur( 4px );
    -webkit-backdrop-filter: blur( 4px );
    border-radius: 10px;
    border: 1px solid rgba( 255, 255, 255, 0.18 );
    padding: 2em
    margin: 2em;
  }

  /*Utilidades*/

  .two-columns {
      display: grid;
      grid-template-columns: 1fr 1fr;
