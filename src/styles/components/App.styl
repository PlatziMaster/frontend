// Body styles
body
  font-size: 16px
  font-family: 'Helvetica Neue', sans-serif
  background-color: #F0F0F0
  margin: 0
  padding: 0

// Header styles
.header
  color: #fff
  text-align: justify
  background-color: #2196f3
  width: 100%
  padding: 20px

  .header-title
    font-size: 2rem
    font-weight: bold
    text-align: center
    color: #fff

.avatar 
  display: flex
  justify-content: center
  align-items: center
  width: 150px
  height: 150px
  margin: 0 auto 2rem
  border-radius: 50%
  background-color: #f1f1f1

  img 
    width: 100%
    height: 100%
    object-fit: cover
    border-radius: 50%

// Main container styles
.container
  max-width: 960px
  margin: 0 auto

// Description styles
.description
  width: 100%
  margin-top: 5px
  background-color: #fff
  padding: 20px
  margin-bottom: 5px
  border-radius: 10px
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2)

// Experience styles
.experiencia
  display: flex
  flex-direction: column
  margin-top: 5px
  width: 100%
  background-color: #fff
  padding: 20px
  margin-bottom: 5px
  border-radius: 10px
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2)
  
.experiencia-header
  display: flex
  align-items: center
  margin-bottom: 10px
  
  h2
    font-size: 24px
    font-weight: bold
    margin-right: 10px

.exp-container
    display: flex
    flex-direction: column
    align-items: justify
    padding: 0.5rem
    margin: 0.5rem 0
    border: 2px solid #ccc
    border-radius: 10px
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2)

// Estudios - Habilidades styles
.estudios-habilidades
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 5px
  width: 100%
  background-color: #fff
  padding: 20px
  margin-bottom: 5px
  border-radius: 10px
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2)

// Estudios style
.estudios-header
  display: flex
  align-items: center
  margin-bottom: 10px

// Social
.redes-sociales
  display: flex
  flex-direction: row
  align-items: justify
  width: 100%
  margin-top: 5px
  align-items: center
  justify-content: center;
  background-color: #fff
  padding: 20px
  margin-bottom: 5px
  border-radius: 10px
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2)
  
.red-social-link
  display: inline-block
  text-decoration: none
  width: 50px
  height: 50px
  background-color: #f5f5f5
  border-radius: 50%
  margin: 0 10px
  transition: all 0.2s ease-in-out
  
.red-social-link:hover
  transform: scale(1.1)
  
.red-social-icon
  width: 25px
  height: 25px
  margin: 12.5px
  



  