.job-grid
  display: grid
  grid-auto-flow: dense
  gap: 24px

.job-box 
  padding: 24px
  border: 1px solid #333
  border-radius: 8px

.job-wrapper-avatar 
  display: flex
  align-items: flex-start
  gap: 16px
  margin-bottom: 16px

.job-avatar
  width: 56px
  height: 56px
  border-radius: 50%
  overflow: hidden
  border: 1px solid #f3f3f3

.job-avatar img 
  width: 100%
  height: 100%

.job-title, .job-company
  font-size: 18px

.job-title
  font-weight: 900

.job-date
  font-size: 14px