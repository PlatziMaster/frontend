@import '../colors.styl'

.experience-cv
    background-color: $background-section
    border-radius: 20px
    border: 1px solid $border-section
    padding: 15px
    margin-bottom: 30px

    .experience
        .experience-title
            color: $text-blue
            margin: 0.7rem 0
        .experience-item
            border-bottom: 1px solid $border-section
            .experience-jobtitle
                margin-bottom: 0.5rem
            .experience-company
                margin: 0 0 0.3rem
                font-size: 0.9rem
            .experience-date
                margin: 0
                font-size: 0.8rem