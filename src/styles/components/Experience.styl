.Experience {
  grid-area experience
  &__list {
    list-style square
    padding-left 1rem
  }
  &-item {
    margin-bottom 2rem
    &__job {
      font-size 0.95rem
      font-weight 700
      letter-spacing 1.5px
      text-transform uppercase
    }
    &__info {
      font-size 0.85rem
      font-weight 500
      letter-spacing 1px
    }
    &__description {
      font-size 0.9rem
      font-weight 400
      line-height 1.8rem
    }
  }
}