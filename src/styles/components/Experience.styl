@import './App.styl';

  .Experience-title
    padding 10rem

    .experience__card
      .card__jobs
        display flex
        flex-direction row
        justify-content center
        gap 4rem
        margin 0 auto
        margin-top 8rem

      .card__projects
        display flex
        flex-direction row
        justify-content center
        gap 4rem
        align-items center
        margin-top 4rem

      .Experience-item
        display flex
        flex-direction column
        justify-content space-around
        background-color $soft
        border-radius 2rem
        padding 4rem
        width 59.8rem

        .card__date,
        .card__more
          text-align right

        .card__more
          self-align baseline