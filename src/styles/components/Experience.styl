.Experience-container
  grid-area experience
  background-color lightness(#ff4500, 80%)
  border-radius 1rem
  margin 0 2rem 2rem 2rem
  padding 2rem
  .Experience-title
  .Experience-items-container
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 4rem
    .Experience-item
      .Experience-company
        font-weight 500
        font-size 1.4rem
        .Experience-jobDate
          font-style: italic;
          font-size 1.2rem
      .Experience-jobTitle
        font-size 1.4rem
      .Experience-jobDescription
        font-size 1.4rem