.Footer
    display: flex
    justify-content: space-around
    align-items: center
    width: 100%
    height: 120px
    margin-top: 25px
    background-color: color-primario
    @media screen and (max-width: 570px)
        flex-direction: column
        justify-content: space-around
        align-items: center
        p
            order: 2
            margin-top: auto
            margin-bottom: 15px
        ul
            order: 1
            margin-top: auto
            margin-bottom: 0
    
    p
        color: color-claro
        font-family: font2
        font-size: fontSize-paragraph
    ul
        display: flex
        justify-content: center
        list-style: none
        padding: 0;
    &-socialItem
        div
            width: 35px
            height: 35px
            margin-right: 25px;
            background-color: white
        &:last-child
            div
                margin-right: 0