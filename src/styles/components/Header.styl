@import '../App.styl';
    
.Header
    border-container()

.Header__title-avatar
    display: flex
    flex-direction: column-reverse
    
.Header__avatar-container
    display: flex
    justify-content: center

.Header__avatar-img
    border-radius: 50%;
    margin-right: 1rem;
    width: 15rem;
    height: 15rem;
    margin: 1.5rem

.Header__info
    display: flex
    flex-direction: column
    align-items: center

    >h2, h3, p 
        margin-top: 1rem
        text-align: center

    >div 
        margin-top: 1rem 
    
    .Header__info-profile
        h2
            text-align: center

.Header__infoContainer
    width: 100%
    display: flex
    flex-direction: row
    align-items: center
    padding: 1rem
    padding-top: 0

    .Header__info-contact, .Header__info-social
        width: 50%
        border-subcontainer()
        
        .Header__info-contactElements, .Header__info-socialLinks
            display: flex
            flex-direction: column
            align-items:  center
            padding-top: 1rem

            >a
                margin: .5rem 0

            div
                display: flex
                flex-direction: row
                align-items: center
                margin-bottom: .8rem

                img
                    width: 2rem
                    margin-right: 1rem
                
                p
                    margin: 0



@media (min-width: 650px)
    .Header
        height: 47rem
        .Header__title-avatar
            flex-direction: row
            .Header__avatar-container
                margin: 0 2rem
                .Header__avatar-img
                    width: 20rem
                    height: 20rem
        .Header-title
            width: 100%
        .Header__info
            position relative
            bottom: 13rem
            .Header__info-profile
                position relative
                bottom: 2.8rem
                left: 12rem
        
@media (min-width: 1000px)
    .Header
        height: 62.5rem
        .Header__title-avatar
            .Header__avatar-container
                margin-top: 3rem
                margin-left: 5rem
                .Header__avatar-img
                    width: 35rem
                    height: 35rem
                    margin auto
        .Header-title
            width: 100%
        .Header__info
            position relative
            bottom: 30rem
            .Header__info-profile
                position relative
                bottom: 1rem
                left: 20rem
            .Header__infoContainer
                width: 50%
                flex-direction: column
                align-items: center
                position inherit
                left: 20rem
                div
                    width: 100%
                    justify-content: center