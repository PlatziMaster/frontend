@import '../Vars.styl'

.container-header
  background-color $primary-color
  color $primary-text-color
  padding 2em

.avatar-style
  max-width: 200px
  border-radius 50%
  border 0.5em solid $secondary-color

.flex-container-header
  display flex
  align-items center
  margin-right 1em

.flex-wrap-container-header
  display flex
  align-items center
  flex-wrap wrap