.Header
  &-container
    display flex
    align-items center
    flex-direction column
    align-items flex-start
    margin-block-end 15px

  img
    height 80px
    width 80px
    border-radius 50%
  
  &-title, h1
    margin 0
    font-size 2rem
    font-weight 700

  h1::after
    width: 1.4rem

  h3
    margin 0
    font-size 0.8rem