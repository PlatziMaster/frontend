header
  display: flex
  justify-content: flex-start
  align-items: center
  flex-wrap: nowrap
  section-styles()
  .Header-img
    width: 200px
    height: 200px
    margin-inline-end: 30px
    border: 3px solid Color-variante
    border-radius: 50%
    overflow: hidden
    img
      display: block
      width: 100%
      object-fit: cover
  .Header-title
    display: flex
    justify-content: start
    align-items: center
    flex-wrap: wrap
    width: 80%
    text-align: start
    h1
      color: Color-variante
    h2
      color: Color-secundario