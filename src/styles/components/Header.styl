
 @import 'Vars.styl'

header
  background-color mainColor
  display: flex
  flex-flow: row nowrap
  margin: 0 auto
  height: 50%
  align-items center
  flex-direction row
  padding-left 5%
  margin-right 5%

.Header
  flex-direction column
  margin-left 10%
  margin-right 5px

.Header-item
  padding 0 30px 0 5px

.fotoCV 
  width 200px
  border-collapse separate
  border-radius 100px

img:not(.fotoCV)
  width 20px
  
header img:not(:first-child) 
  color red
  
img 
  margin-bottom -3px

section div
  margin 8px 0

.PersonalIcon 
  display inline-block  

@media screen and (max-width: 1200px)
  .PersonalIcon
    display block
   
   






