
//##Header
.Header
  align-items:center
  background: rgb(28,26,68);
  background: linear-gradient(90deg, rgba(28,26,68,1) 0%, rgba(0,212,255,1) 100%);
  border-radius: radius radius 0 0
  display: grid;
  grid-template-columns:20% 30% 40%
  padding:1.5rem

.Header__avatar img
  border-radius:50%
  max-width:120px
  margin:1rem

.Header__principal
  text-align: center
  display: flex
  flex-direction:column
  justify-content:center
  align-items: center


.Header-social-media
  display: flex
  padding:0

.Header-social-media li
  list-style :none

.Header-social-media a
  text-decoration: none
  color:black
  margin-right: 1rem
.Header-social-media a i
  font-size:1.5rem

