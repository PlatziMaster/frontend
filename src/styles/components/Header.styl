@import '../App.styl'

.header
    display: flex
    justify-content: space-around
    padding: 2rem
    margin: 1rem
    margin-bottom: 2rem
    border-radius: 2rem
    box-shadow: 2px 1rem 1rem rgba(0, 0, 0, 0.5)
    background-color: $white-color
    color: $blue-color

.header-content
    display: flex
    align-items: center

.header-img
    width: 15rem
    margin: 1rem
    border-radius: 10rem
    box-shadow: 7px 1px 7px rgba(0, 0, 0, 0.5)

.header-title
    font-size: $head1
    color: $red-color

.header-name
    font-size: $head3

@media (max-width: 900px)
    .header
        flex-direction: column
        align-items: center

@media (max-width: 700px)
    .header-content
        flex-direction: column
        text-align: center
