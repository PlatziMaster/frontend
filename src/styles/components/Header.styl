@import '../App.styl';
    
.Header
    border-container()

.Header__title-avatar
    display: flex
    flex-direction: column-reverse
    
.Header__avatar-container
    display: flex
    justify-content: center

.Header__avatar-img
    border-radius: 50%;
    margin-right: 1rem;
    width: 15rem;
    height: 15rem;
    margin: 1.5rem

.Header__info
    display: flex
    flex-direction: column
    align-items: center

    >h2 
        margin-top: 1rem

    >h3 
        margin-top: 1rem 

    >div 
        margin-top: 1rem 

    >p
        margin-top: 1rem 

.Header__infoContainer
    width: 100%
    display: flex
    flex-direction: row
    align-items: center
    padding: 1rem
    padding-top: 0

    .Header__info-contact
        width: 50%
        border-subcontainer()
        

        .Header__info-contactElements
            display: flex
            flex-direction: column
            align-items: center
            
            >p
                margin-top: .5rem

            >a
                margin: .5rem 0

    .Header__info-social
        width: 50%
        border-subcontainer()

        .Header__info-socialLinks
            display: flex
            flex-direction: column
            align-items: center

            >a
                margin-top: .5rem
