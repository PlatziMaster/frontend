@import "../base/colors"

.about-container
    display flex
    gap 2rem
    margin-top: 40px
    margin-bottom 40px

    .image-container
        img
            max-width 216px
            border-radius 4px

    .title-section
        display flex
        justify-content space-between

        .title 
            font-size 24px
            font-weight 600

        a
            color $primary-color


    .subtitle
        font-size: 16px
        margin-bottom 8px
        color $primary-color
        font-weight 500
    
    .key-points
        display flex
        gap 2rem

        .list 
            padding-left 0
            li
                float left
                display flex
                align-items center
                padding-right 40px
                color $primary-color
                gap .5rem