@import '../App.styl'

.interest
    display: flex
    flex-direction: column
    padding: 2rem
    margin: 1rem
    border-radius: 2rem
    box-shadow: 2px 1rem 1rem rgba(0, 0, 0, 0.5)
    background-color: $white-color
    color: $blue-color
    font-size: $normal-text
    font-weight: 600
    width: 100%

.interest-title
    font-size: $head1
    color: $red-color

.interest-list
    padding: .5rem 2rem


@media (max-width: 700px)
    .interest
        width: auto