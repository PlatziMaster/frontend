@import '../colors.styl'

.interest-languages-cv
    .interest
        background-color: $background-section
        border-radius: 20px
        border: 1px solid $border-section
        padding: 15px
        margin-bottom: 30px

        .interest-title
            color: $text-blue
            margin: 0.7rem 0

        .interest-item
            .interest-name
                margin-bottom: 0.5rem

@media (min-width: 992px)
    .interest-languages-cv
        display: flex
        justify-content: space-between
        align-items: flex-start
        .interest
            width: calc(50% - 15px)