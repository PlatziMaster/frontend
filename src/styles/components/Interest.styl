.interest__container
    margin: 30px 20px;

.Interest-title
    font-size 3rem
    text-transform uppercase
    letter-spacing 0.3rem
    text-align center

.interest__listContainer
    margin: 30px auto;
    text-align: center;

.interest__list
    display:inline-block;
    padding-left:5px;
    padding-right:5px;

.Interest-item
    display:inline
    font-size 2rem
    margin: 10px 5px 0 0;
    background-color: #689F38;
    color: #fff;
    padding: 10px;
    text-align: center

@media (max-width: 450px)
    .interest__listContainer {
        display: flex
        flex-direction: column
    }

    .interest__list {
        padding: 25px
    }