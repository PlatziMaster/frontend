mySelectors = '.Academic,.Skills,.Interest,.Languages'

{mySelectors}
  @media (max-width: 40em)
    grid-column: 1 / 3
  
  &-title
    font-size: 1.4rem
    margin-bottom: 0.8rem

.Skills,.Interest 
  &-items 
    list-style: none
    display: flex
    flex-wrap: wrap

  &-item
    margin-right: 1.2rem
    margin-bottom: 1rem
    background-color: teal
    padding: 0.5rem;
    text-align: center
    border-radius: 10px
    padding: 0.5rem
    color: white
    cursor: pointer
    &:hover
      background-color: #11acac

.Academic,.Languages
  &-items 
    list-style: none
    display: flex
    flex-direction: column

  &-item
    font-weight: 700
    &:not(:last-child)
      margin-bottom: 1rem