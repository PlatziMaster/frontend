//Mixins
mixin-max-width()
  max-width: 250px
  max-height: 250px

mixin-container()
  height: auto
  width: 100%
  margin-top: 20px
  padding: 10px

mixin-container-divide()
  display: flex
  margin-right: 5px

mixin-font-title()
  font-size: 3.5rem
  font-weight: 600

mixin-font-sub-title()
  font-size: 2.8rem
  font-weight: 600

mixin-font-p()
  font-size:1.8rem
  font-weight:400
  margin-top: 5px

mixin-ancla()
  text-decoration: none
  color: black

mixin-ancla-hover()
  cursor: pointer
  background: primary-color
  border-radius: 2px
  color: #fff