.social__container {
    display: flex;
    flex-direction: row;
    flex-basis: 30%;
    margin: auto;
    justify-content: center;
}

.social__list {
    display: inline-block;
}

.social__item {
    list-style-type: none;
}


.social__icon {
    margin: 10px;
    height: 35px;
}

@media (max-width: 1023px)
    .social__container
        flex-basis: 100%


@media (max-width: 450px)
    .social__container
        flex-basis: 100%
