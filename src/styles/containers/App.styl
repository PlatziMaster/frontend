*
  margin 0
  padding 0
  box-sizing border-box

html
  font-family 'Montserrat', sans-serif
  font-size 62.5%

body
  background-color white
  color #1c1c1c
  font-size 1.4rem

li
  list-style none

a
  text-decoration none

#app
  padding 60px
  max-width 1000px
  margin 30px auto
  -webkit-box-shadow 0px 0px 8px 2px rgba(0,0,0,0.08)
  box-shadow 0px 0px 8px 2px rgba(0,0,0,0.08)
  border-radius 20px

.body_cv
  width 100%
  display flex
.left
  width calc(100%/3)
.right
  width calc((100%/3)*2)
  border-left 1px solid #1c1c1c61
  padding-left 40px

.title
  font-weight 600
  font-size 2.6rem
  letter-spacing .2rem
.short-line
  width 30px
  height 3px
  background #1c1c1cdb
  color rgba(0, 0, 0, 0)
  margin-bottom 8px

.long-line
  width 24rem
  height 5px
  background #1c1c1cdb
  color rgba(0, 0, 0, 0)
  margin-top 6px

.divider
  width 90%
  height 1px
  background-color #1c1c1c61
  margin 10px auto
  color rgba(0, 0, 0, 0)

.About, .Skills, .Languages, .Profile, .Academic, .Experience, .Social
  width 100%
  padding-top 12px
  padding-bottom 12px

.list-item
  padding 10px 0

@media only screen and (max-width 900px)
  .body_cv
    display block
    display flex
    flex-direction column
  .left, .right
    width 100%
  .left
    position relative
    border-bottom 1px solid rgba(28,28,28,0.38)
    padding-bottom 50px
  .right
    border none
    padding-left 0
    padding-top 30px
  .About, .Skills, .Social, .Languages
    width 50%
    float left
    padding-left 20px
  .Languages
    position absolute
    top 26rem
  .Social
    position absolute
    top 40rem

@media only screen and (max-width 630px)
  #app
    margin 0 auto
    -webkit-box-shadow none
    box-shadow none
    border-radius 0
  .left
    padding-bottom 20px
  .About, .Skills, .Social, .Languages
    width 100%
    padding-left 0
  .Social, .Languages
    position static
  .Languages, .Skills
    ul
      display flex
      flex-wrap wrap
      justify-content center
  .About
    ul
      columns 2

@media only screen and (max-width 410px)
  .About
    ul
      columns 1